{
  name: 'LiveOak Admin Console',
  html-app: '/console/index.html',
  resources: {
    console: {
      type: 'filesystem',
      config: {
        directory: "${application.dir}/console"
      }
    },

    client: {
      type: 'aggregating-filesystem',
      config: {
        directory: "${io.liveoak.js.dir}"
      }
    },

    css: {
      type: 'filesystem',
      config: {
        directory: "${application.dir}/css"
      }
    },

    auth: {
      type: 'keycloak'
    },

    authz: {
      type: 'security'
    },

    uri-policy: {
      type: 'uri-policy',
      config: {
        rules: [{
          uriPattern: '/admin',
          requestTypes: [ 'READ' ],
          allowedUsers: [ '*' ]
        }, {
          uriPattern: '/admin/console/*',
          requestTypes: [ 'READ' ],
          allowedUsers: [ '*' ]
        }, {
          uriPattern: '/admin/client/*',
          requestTypes: [ 'READ' ],
          allowedUsers: [ '*' ]
        }]
      }
    }
  }
}
