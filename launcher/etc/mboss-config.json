
{ resources: {
    app: {
      type: 'jboss-module',
      module-id:   'org.projectodd.restafari.filesystem',
      class-name:  'org.projectodd.restafari.filesystem.FilesystemResource',
      config: {
        root: '${user.dir}'
      }
    },

    client: {
      type: 'jboss-module',
      module-id:   'org.projectodd.restafari.filesystem.aggregating',
      class-name:  'org.projectodd.restafari.filesystem.aggregating.AggregatingFilesystemResource',
      config: {
        root: '${js.client.dir}'
      }
    },

    storage: {
      type: 'jboss-module',
      module-id: 'org.projectodd.restafari.mongo',
      class-name: 'org.projectodd.restafari.mongo.MongoDBResource',
      config: {
        db: 'mboss'
      }
    }
  }

}
